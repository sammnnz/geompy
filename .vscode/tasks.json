        {
            "label": "Coverage report",
            "type": "shell",
            "windows": {
                "options": {
                    "shell": {
                        "executable": "C:\\Program Files\\Git\\bin\\bash.exe",
                        "args": [
                            "--login",
                            "-i",
                            "-c",
                        ]
                    },
                }
            },
            "command": "gcov",
            "args": [
                "-b",
                "_geompy.c",
                "objects/polygonobject.c"
            ],
            "options": {
                "cwd": "${workspaceFolder}/src/_geompy/build"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task for create coverage report with gcov."
        },
        {
            "label": "Create pyenv .venv (win)",
            "type": "shell",
            "windows": {
                "options": {
                    "shell": {
                        "executable": "C:\\Program Files\\Git\\bin\\bash.exe",
                        "args": [
                            "--login",
                            "-i",
                            "-c",
                        ]
                    },
                }
            },
            "command": ".",
            "args": [
                "./sh/pyenv.sh",
                "$PY_VERSION",
                "$PY_VERSION_FULL",
                "$VENV_ROOT",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task for create virtual env with pyenv.",
        },
        {
            "label": "Clean [Create pyenv .venv (win)]",
            "type": "shell",
            "windows": {
                "options": {
                    "shell": {
                        "executable": "C:\\Program Files\\Git\\bin\\bash.exe",
                        "args": [
                            "--login",
                            "-i",
                            "-c",
                        ]
                    },
                }
            },
            "command": "rm",
            "args": [
                "-rf",
                "$VENV_ROOT/.venv$PY_VERSION_FULL",
                "$VENV_ROOT/.python-version"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task for clean after [Create pyenv .venv (win)]",
        },
        {
            "label": "Clean all .venvs",
            "type": "shell",
            "windows": {
                "options": {
                    "shell": {
                        "executable": "C:\\Program Files\\Git\\bin\\bash.exe",
                        "args": [
                            "--login",
                            "-i",
                            "-c",
                        ]
                    },
                }
            },
            "command": "rm",
            "args": [
                "-rf",
                "$VENV_ROOT/.venv*",
                "$VENV_ROOT/.python-version"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task for clean all pyenv venvs",
        },
        {
            "label": "Pre Launch [test__geompy]",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Pre-Task for [test__geompy] launch.",
            "dependsOn":[
                "Test CPython API",
                "Build _geompy",
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "Post Launch [test__geompy]",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Post-Task for [test__geompy] launch.",
            "dependsOn":[
                "Coverage report",
                "Clean [Build _geompy]",
                "Clean [Test CPython API]",
                // "Clean [Create pyenv .venv (win)]"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "Build current file",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-Wall",
                "-Wpedantic",
                "-g3",
                "-O0",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc",
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task for build current file."
        },
        {
            "label": "Post build current file",
            "type": "shell",
            "windows": {
                "options": {
                    "shell": {
                        "executable": "C:\\Program Files\\Git\\bin\\bash.exe",
                        "args": [
                            "--login",
                            "-i",
                            "-c",
                        ]
                    },
                },
                "args": [
                "-f",
                "${fileBasenameNoExtension}.exe",
                ],
            },
            "linux": {
                "args": [
                "-f",
                "${fileBasenameNoExtension}",
                ],
            },
            "command": "rm",
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Post-Task for print coverage report and clean."
        },
    ],
}